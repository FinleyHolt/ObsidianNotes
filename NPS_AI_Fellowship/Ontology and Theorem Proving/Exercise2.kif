;; All people that like broccoli hate ice cream

(subclass IceCream Dessert)

(=>
    (and
        (instance ?P Human)
        (wants ?P Broccoli)
        (instance ?I IceCream))
    (dislikes ?P ?I))

;; Bill has a dog

(instance Bill Human)
(exists (?D)
    (and
        (instance ?D Dog)
        (possesses Bill ?D)))

;; Dogs that lick Bill like Jane

(instance Bill Human)
(instance Jane Human)
(=>
    (and
        (instance ?D Dog)
        (exists (?L)
            (and
                (instance ?L Licking)
                (agent ?L ?D)
                (patient ?L Bill))))
    (wants ?D Jane))

;; If someone likes dogs he or she likes some vegetable

(=>
    (and
        (instance ?P Human)
        (exists (?D)
            (and
                (instance ?D Dog)
                (wants ?P ?D))))
    (exists (?V)
        (and
            (instance ?V Vegetable)
            (wants ?P ?V))))

;; People who are sad or lonely like dogs

(=>
    (and
        (instance ?P Human)
        (or
            (attribute ?P Unhappiness)
            (attribute ?P Alone)))
    (wants ?P Dog))

;; Everyone who eats broccoli likes a dog or a cat

(=>
    (and
        (instance ?P Human)
        (exists (?E)
            (and
                (instance ?E Eating)
                (agent ?E ?P)
                (patient ?E Broccoli))))
    (or
        (wants ?P Dog)
        (wants ?P Cat)))

;; People who like dogs or cats hate mice

(=>
    (and
        (instance ?P Human)
        (or
            (wants ?P Dog)
            (wants ?P Cat)))
    (dislikes ?P Mouse))

;; If it is raining I take my umbrella

(instance Me Human)
(=>
    (exists (?R)
        (instance ?R Raining))
    (exists (?C ?U)
        (and
            (instance ?C Carrying)
            (instance ?U Umbrella)
            (agent ?C Me)
            (patient ?C ?U))))

;; Anyone who has an umbrella is not wet

(=>
    (and
        (instance ?P Human)
        (exists (?U ?C)
            (and
                (instance ?U Umbrella)
                (instance ?C Carrying)
                (agent ?C ?P)
                (patient ?C ?U))))
    (not (attribute ?P Wet)))

