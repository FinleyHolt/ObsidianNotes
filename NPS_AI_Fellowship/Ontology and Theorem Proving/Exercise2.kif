        (wears Myself Coat1)
        (wears Myself Hat1)))

;; Only staff have access to this computer

(instance Computer1 Computer)
(=>
    (and
        (instance ?ACTION UserAction)
        (patient ?ACTION Computer1)
        (agent ?ACTION ?P))
    (attribute ?P Staff))

;; Access to campus is only for faculty, staff, students and people with a visitor's pass

(instance Campus Region)
(=>
    (and
        (instance ?P Human)
        (located ?P Campus))
    (or
        (attribute ?P Faculty)
        (attribute ?P Staff)
        (attribute ?P Student)
        (exists (?PASS)
            (and
                (instance ?PASS Certificate)
                (possesses ?P ?PASS)))))