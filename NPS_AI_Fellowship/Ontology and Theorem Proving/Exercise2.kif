;; Tenured professors have published many papers

(=>
    (and
        (instance ?T Human)
        (attribute ?T Professor)
        (attribute ?T Tenured))
    (exists (?P)
        (and
            (instance ?P Collection)
            (=>
                (member ?PAPER ?P)
                (instance ?PAPER Article))
            (authors ?T ?P)
            (greaterThan (CardinalityFn ?P) 5))))

;; Mary has two feet

(instance Mary Human)
(exists (?F1 ?F2)
    (and
        (instance ?F1 Foot)
        (instance ?F2 Foot)
        (part ?F1 Mary)
        (part ?F2 Mary)
        (not (equal ?F1 ?F2))))

